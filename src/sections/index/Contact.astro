---
import Paragraph from '@components/Paragraph.astro';
import Socials from '@components/Socials.astro';
import { useTranslations, type LangParams } from '@utils/i18n/utils';

const { lang } = Astro.params as LangParams;
const t = useTranslations(lang);
---

<Paragraph class="apparition" style="--apparition-delay: 1">
  {t('contact.text')}
</Paragraph>
<Socials class="socials apparition" style="--apparition-delay: 2" />

<style>
  .socials {
    margin-top: 1.5rem;
    justify-content: center;
  }
</style>
