---
import Link from '@components/Link.astro';
import { prefixBase } from '@utils/global';
import { type TranslatedMessage } from '@utils/i18n/utils';
import { Icon } from 'astro-icon/components';

interface Props {
  class?: string;
  img?: string;
  imgAlt?: string;
  title?: TranslatedMessage;
  content?: TranslatedMessage;
  subItems?: Array<{ icon: string; name: TranslatedMessage }>;
  links?: Array<{ icon: string; href: string }>;
}

const { class: className, img, imgAlt, title, content, subItems, links, ...rest } = Astro.props;
---

<article class={className} {...rest}>
  {img && imgAlt && <img src={`${prefixBase}${img}`} alt={imgAlt} />}
  {title && <h3>{title}</h3>}
  {content && <p>{content}</p>}
  {
    (subItems || links) && (
      <div>
        {subItems && (
          <ul class="subitems">
            {subItems.map(({ icon, name }) => (
              <li>
                <Icon name={icon} />
                <span>{name}</span>
              </li>
            ))}
          </ul>
        )}
        {links && (
          <ul class="links">
            {links.map(({ icon, href }) => (
              <Link href={href} target={href.startsWith('/') ? undefined : '_blank'} format="button">
                <Icon name={icon} />
              </Link>
            ))}
          </ul>
        )}
      </div>
    )
  }
</article>

<style>
  article {
    height: 100%;
    padding: 1.5rem;
    background-color: var(--c-content-background);
    display: flex;
    flex-direction: column;
    border-width: 0.0625rem;
    border-style: solid;
    border-color: var(--c-border);
    border-radius: 0.375rem;
  }

  article img {
    max-width: 3rem;
    border-width: 0.0625rem;
    border-style: solid;
    border-color: var(--c-border);
    border-radius: 50%;
    margin-bottom: 1rem;
  }

  article h3 {
    margin-bottom: 0.375rem;
    font-size: 1.5rem;
  }

  article p {
    font-size: 0.875rem;
  }

  article div {
    margin-top: auto;
  }

  article ul {
    display: flex;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  article .subitems {
    margin-top: 1rem;
  }

  article .links {
    margin-top: 0.625rem;
  }

  article li {
    font-size: 0.75rem;
    border-radius: 1rem;
    padding: 0.0625rem 0.625rem;
    background-color: var(--c-grey);
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  article .subitems span {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>
