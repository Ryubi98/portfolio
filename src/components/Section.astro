---
import Wrapper from '@components/Wrapper.astro';
import { type TranslatedMessage } from '@utils/i18n/utils';

interface Props {
  id: string;
  isMainSection: boolean;
  title: TranslatedMessage;
}

const { isMainSection, id, title } = Astro.props;
---

<section id={id} class:list={[{ main: isMainSection }]}>
  <Wrapper>
    {!isMainSection && <h2 class="apparition">{title}</h2>}
    <slot />
  </Wrapper>
</section>

<style>
  section {
    margin-bottom: 7rem;
  }

  section.main {
    --margin: 1rem;
    margin-top: calc(var(--margin) + var(--header-bottom-offset));
  }

  @media (width > 54em) {
    section.main {
      --margin: 0;
      min-height: 100svh;
      display: flex;
      align-items: center;
    }
  }

  h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
  }
</style>
