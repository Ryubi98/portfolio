---
import { prefixBase } from "@utils/global";
import { defaultLang, getLangFromUrl, languages } from "@utils/i18n/utils";

const currentLang = getLangFromUrl(Astro.url);
---

{
  ["", ...languages].map((lang) => (
    <link
      href={`${prefixBase}${Astro.url.pathname
        .replace(prefixBase, "")
        .replace(
          currentLang ? `/${currentLang}` : "",
          lang ? `/${lang}` : ""
        )}`}
      rel="alternate"
      hreflang={lang ? lang : defaultLang}
    />
  ))
}
