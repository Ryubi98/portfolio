---
import { type LinkProps } from '@components/Link.astro';
import Wrapper from '@components/Wrapper.astro';
import Navbar from './Navbar/index.astro';
import ToggleLang from './ToggleLang.astro';
import ToggleTheme from './ToggleTheme.astro';

interface Props {
  links: LinkProps[];
}

const { links } = Astro.props;
---

<header>
  <Wrapper>
    <div class="row">
      <ToggleLang />
      <Navbar links={links} />
      <ToggleTheme />
    </div>
  </Wrapper>
</header>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding-block: 1rem;
    background-color: var(--c-background-90);
  }

  .row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
</style>
