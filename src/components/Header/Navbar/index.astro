---
import { type LangParams } from '@utils/i18n/utils';
import { getUrlFromDestinationAndLang } from '@utils/routing';
import { type ComponentProps } from 'astro/types';
import Link from './Link.astro';

const { lang } = Astro.params as LangParams;

interface Props {
  links: ComponentProps<typeof Link>[];
}

const { links } = Astro.props;
---

<nav>
  <ul>
    {
      links.map(({ href, ...props }) => (
        <li>
          <Link href={getUrlFromDestinationAndLang(href, lang)} {...props} />
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    --margin: 1rem;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0 var(--margin) var(--margin) var(--margin);
  }

  @media (width > 64em) {
    nav {
      --margin: 0;
      top: 1.0625rem;
      bottom: unset;
    }
  }

  ul {
    --padding: 0.625rem;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 0.3125rem;
    display: flex;
    gap: var(--padding);
    padding: var(--padding);
    max-width: fit-content;
    margin-inline: auto;
    overflow-y: auto;
  }

  @media (width > 64em) {
    ul {
      --padding: 0.625rem 1.25rem;
      backdrop-filter: none;
      -webkit-backdrop-filter: none;
      border-radius: 0;
    }
  }

  li {
    flex-shrink: 0;
  }
</style>
