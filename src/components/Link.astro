---
import type { TranslatedMessage } from '@utils/i18n/utils';
import Icon from './Icon.astro';

interface Props {
  href: string;
  value: string | TranslatedMessage;
  icon?: string;
  isExternal?: boolean;
}
export type { Props as LinkProps };

const { href, value, icon, isExternal = false } = Astro.props as Props;
---

<a href={href} target={isExternal ? '_blank' : '_self'}>
  {icon && <Icon icon={icon} />}
  {value}
</a>

<style>
  a {
    color: var(--c-primary);
    transition: color 0.3s ease-in-out;
  }

  a:hover {
    color: var(--c-accent);
  }
</style>
