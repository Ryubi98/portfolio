---
interface Props {
  size?: 'small' | 'medium' | 'large';
}

const { size = 'medium' } = Astro.props;
---

<div class:list={[{ medium: size === 'medium', large: size === 'large' }]}>
  <slot />
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .medium {
    gap: 1rem;
  }

  .large {
    gap: 1.5rem;
  }

  @media (width > 54em) {
    .medium {
      gap: 1.5rem;
    }

    .large {
      gap: 2rem;
    }
  }

  @media (width > 64em) {
    .large {
      gap: 2.5rem;
    }
  }
</style>
