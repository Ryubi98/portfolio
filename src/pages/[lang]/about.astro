---
import MainLayout from '@layouts/MainLayout.astro';
import { getLangStaticPaths, getUrlFromDestinationAndLang, LangParams, useTranslations } from '@utils/i18n/utils';

export { getLangStaticPaths as getStaticPaths };

const { lang } = Astro.params as LangParams;
const t = useTranslations(lang);
---

<MainLayout title="title" description="description">
  <h1>About {lang}</h1>
  <a href={getUrlFromDestinationAndLang('', lang)}>Home</a>
  <div>{t('nav.test', { test: <h1>Test</h1> })}</div>
</MainLayout>
