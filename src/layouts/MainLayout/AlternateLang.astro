---
import { prefixBase } from '@utils/global';
import { slugLangs, type LangParams } from '@utils/i18n/utils';

const { lang } = Astro.params as LangParams;
---

{
  slugLangs.map((slugLang) => (
    <link
      href={`${prefixBase}${Astro.url.pathname.replace(prefixBase, '').replace(`/${lang}`, `/${slugLang}`)}`}
      rel="alternate"
      hreflang={slugLang}
    />
  ))
}
