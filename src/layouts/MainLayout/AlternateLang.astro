---
import { prefixBase } from '@utils/global';
import { getLangFromUrl, slugLangs } from '@utils/i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
---

{
  slugLangs.map((lang) => (
    <link
      href={`${prefixBase}${Astro.url.pathname.replace(prefixBase, '').replace(`/${currentLang}`, `/${lang}`)}`}
      rel="alternate"
      hreflang={lang}
    />
  ))
}
